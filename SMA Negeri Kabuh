    <script>
        // Star data: [x, y, radius, name]
        const stars = [
            [100, 150, 6, "Dubhe (Œ±)"],      // Top right of bowl
            [120, 200, 5, "Merak (Œ≤)"],      // Bottom right of bowl
            [200, 180, 4, "Phecda (Œ≥)"],     // Bottom left of bowl
            [180, 130, 4, "Megrez (Œ¥)"],     // Top left of bowl
            [250, 110, 5, "Alioth (Œµ)"],     // First star of handle
            [320, 90, 5, "Mizar (Œ∂)"],       // Middle star of handle
            [390, 70, 6, "Alkaid (Œ∑)"]       // End star of handle
        ];

        // Lines data: [startIndex, endIndex]
        const lines = [
            [0, 1], [1, 2], [2, 3], [3, 0],  // Bowl
            [3, 4], [4, 5], [5, 6]           // Handle
        ];

        const container = document.getElementById('constellation');

        // Draw lines
        lines.forEach(([start, end]) => {
            const startStar = stars[start];
            const endStar = stars[end];
            
            const line = document.createElement('div');
            line.className = 'constellation-line';
            
            const length = Math.sqrt(
                Math.pow(endStar[0] - startStar[0], 2) + 
                Math.pow(endStar[1] - startStar[1], 2)
            );
            
            const angle = Math.atan2(
                endStar[1] - startStar[1], 
                endStar[0] - startStar[0]
            ) * 180 / Math.PI;
            
            line.style.width = length + 'px';
            line.style.left = startStar[0] + 'px';
            line.style.top = startStar[1] + 'px';
            line.style.transform = `rotate(${angle}deg)`;
            
            container.appendChild(line);
        });

        // Draw stars
        stars.forEach(([x, y, radius, name]) => {
            const star = document.createElement('div');
            star.className = 'star';
            star.style.width = (radius * 2) + 'px';
            star.style.height = (radius * 2) + 'px';
            star.style.left = (x - radius) + 'px';
            star.style.top = (y - radius) + 'px';
            
            const label = document.createElement('div');
            label.className = 'star-label';
            label.textContent = name;
            label.style.left = (x + 10) + 'px';
            label.style.top = (y - 10) + 'px';
            
            container.appendChild(star);
            container.appendChild(label);
        });

        // Add twinkling effect
        setInterval(() => {
            const allStars = document.querySelectorAll('.star');
            const randomStar = allStars[Math.floor(Math.random() * allStars.length)];
            randomStar.style.opacity = Math.random() * 0.5 + 0.5;
            
            setTimeout(() => {
                randomStar.style.opacity = '1';
            }, 200);
        }, 300);
        
        // Function to load actual photo (uncomment and update path when you have the image)
        /*
        function loadUrsaMajorPhoto() {
            const photoContent = document.querySelector('.photo-content');
            photoContent.innerHTML = '<img src="ursa-major.jpg" alt="Ursa Major Constellation" style="width:100%; height:100%; object-fit:cover;">';
        }
        
        // Uncomment the line below when you have the image file
        // loadUrsaMajorPhoto();
        */
    </script>
